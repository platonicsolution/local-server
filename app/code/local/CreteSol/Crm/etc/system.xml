<?xml version="1.0"?>
<config>
    <tabs>
        <CreteSol translate="label" module="crm">
            <label>CRM</label>
            <sort_order>300</sort_order>
        </CreteSol>
    </tabs>
    <sections>
        <crm translate="label" module="crm">
            <tab>CreteSol</tab>
            <label>CRM Config</label>
            <frontend_type>text</frontend_type>
            <sort_order>120</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <crm_group translate="label" module="crm">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <date_options translate="label">
                            <label>Date Options</label>
                            <frontend_type>select</frontend_type>
                            <source_model>CreteSol_Crm_Model_Dateoptions</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Select Date option to get date from to current date</comment>
                        </date_options>
                       <roles_options translate="label">
                            <label>User Role Options</label>
                            <frontend_type>select</frontend_type>
                            <source_model>CreteSol_Crm_Model_Rolesoptions</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Select User Role option for CRM Dashboard</comment>
                        </roles_options>
                    </fields>
                </crm_group>
            </groups>
        </crm>
    </sections>
</config>