<?xml version="1.0"?>
<config>
    <sections>
        <crm>
            <groups>
                <survey_group translate="label" module="survey">
                    <label>Survey</label>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <date_options translate="label">
                            <label>Date Options</label>
                            <frontend_type>select</frontend_type>
                            <source_model>CreteSol_Survey_Model_Surveydateoptions</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Select Date option if manaul then set date in below text field</comment>
                        </date_options>
                       <manual_date_options translate="label">
                            <label>Date From</label>
                            <frontend_type>text</frontend_type>
                            <frontend_model>survey/adminhtml_system_config_date</frontend_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Set date from here to get survey data</comment>
                        </manual_date_options>
                        <typeform_uid translate="label">
                            <label>TypeForm Form UID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>TypeForm each form has a UID</comment>
                        </typeform_uid>
                        <typeform_apikey translate="label">
                            <label>TypeForm API Key</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>TypeForm API Key</comment>
                        </typeform_apikey>
                    </fields>
                </survey_group>
            </groups>
        </crm>
    </sections>
</config>