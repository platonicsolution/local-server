<?xml version="1.0"?>
<config>
    <tabs>
        <CreteSol_Survey translate="label" module="survey">
            <label>Survey</label>
            <sort_order>1</sort_order>
        </CreteSol_Survey>
    </tabs>
    <sections>
        <survey translate="label" module="survey">
            <tab>CreteSol - Survey</tab>
            <label>Survey Config</label>
            <frontend_type>text</frontend_type>
            <sort_order>120</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <survey_group translate="label" module="survey">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <date_options translate="label">
                            <label>Date Options</label>
                            <frontend_type>select</frontend_type>
                            <source_model>CreteSol_Survey_Model_Dateoptions</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
